{
    "name": "laravel/laravel",
    "license": "MIT",
    "config": {
        "preferred-install": "dist"
    },
    "require": {
        "laravel/framework": "4.2.*",
        "thujohn/pdf": "1.0.5",
        "pusher/pusher-php-server": "2.1.3",
        "codeception/codeception": "~2.1@dev"
    },

    "require-dev": {
        "way/generators": "~2.0",
        "guzzle/guzzle": "~3.7"
    },
    
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-0": {
            "Optima": "app/",
            "Traits": "app/"
        },
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php",
            "app/optima"
        ]
    },
    "scripts": {
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize"
        ]
    },
    "keywords": [
        "framework",
        "laravel"
    ],
    "minimum-stability": "dev",
    "description": "The Laravel Framework."
}
